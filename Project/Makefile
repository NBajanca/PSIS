CC = gcc

SRC_DIR =./src
EXE_DIR =./bin
OBJ_DIR =./obj

PROTO_FLAGS = -l protobuf-c
THREADS = -lpthread 

CLIENTSERVER = client-server

SERVER = server
CLIENTDB = client-db
SERVERMSGCLIENT = server-msg-client
CLIENTMSGSERVER = client-msg-server

CLIENT = client
PROTO = client-server.pb-c

all: $(EXE_DIR)/$(SERVER) $(EXE_DIR)/$(CLIENT)

#Server Executable
$(EXE_DIR)/$(SERVER): $(OBJ_DIR)/$(SERVER).o $(OBJ_DIR)/$(PROTO).o $(OBJ_DIR)/$(CLIENTSERVER).o $(OBJ_DIR)/$(CLIENTDB).o $(OBJ_DIR)/$(SERVERMSGCLIENT).o
	$(CC) $(OBJ_DIR)/$(SERVER).o $(OBJ_DIR)/$(PROTO).o $(OBJ_DIR)/$(CLIENTSERVER).o $(OBJ_DIR)/$(CLIENTDB).o $(OBJ_DIR)/$(SERVERMSGCLIENT).o -o $(EXE_DIR)/$(SERVER) $(PROTO_FLAGS) $(THREADS)

#Server Object
$(OBJ_DIR)/$(SERVER).o: $(SRC_DIR)/$(SERVER).c $(SRC_DIR)/$(SERVER).h $(SRC_DIR)/$(CLIENTSERVER).h $(SRC_DIR)/$(PROTO).h $(SRC_DIR)/$(SERVERMSGCLIENT).h $(SRC_DIR)/$(CLIENTDB).h
	$(CC) -c $(SRC_DIR)/$(SERVER).c -o $(OBJ_DIR)/$(SERVER).o $(PROTO_FLAGS) $(THREADS)
	
#Server-Msg-Client Object
$(OBJ_DIR)/$(SERVERMSGCLIENT).o: $(SRC_DIR)/$(SERVERMSGCLIENT).c $(SRC_DIR)/$(SERVERMSGCLIENT).h $(SRC_DIR)/$(PROTO).h $(SRC_DIR)/$(CLIENTSERVER).h $(SRC_DIR)/$(CLIENTDB).h
	$(CC) -c $(SRC_DIR)/$(SERVERMSGCLIENT).c -o $(OBJ_DIR)/$(SERVERMSGCLIENT).o $(PROTO_FLAGS)
	
#Client Executable
$(EXE_DIR)/$(CLIENT): $(OBJ_DIR)/$(CLIENT).o $(OBJ_DIR)/$(PROTO).o $(OBJ_DIR)/$(CLIENTSERVER).o $(OBJ_DIR)/$(CLIENTMSGSERVER).o
	$(CC) $(OBJ_DIR)/$(CLIENT).o $(OBJ_DIR)/$(PROTO).o $(OBJ_DIR)/$(CLIENTSERVER).o $(OBJ_DIR)/$(CLIENTMSGSERVER).o -o $(EXE_DIR)/$(CLIENT) $(PROTO_FLAGS)
	
#Client Object
$(OBJ_DIR)/$(CLIENT).o: $(SRC_DIR)/$(CLIENT).c $(SRC_DIR)/$(CLIENT).h $(SRC_DIR)/$(CLIENTSERVER).h $(SRC_DIR)/$(PROTO).h $(SRC_DIR)/$(CLIENTMSGSERVER).h
	$(CC) -c $(SRC_DIR)/$(CLIENT).c -o $(OBJ_DIR)/$(CLIENT).o $(PROTO_FLAGS)	
	
#Client-Msg-Server Object
$(OBJ_DIR)/$(CLIENTMSGSERVER).o: $(SRC_DIR)/$(CLIENTMSGSERVER).c $(SRC_DIR)/$(CLIENTMSGSERVER).h $(SRC_DIR)/$(PROTO).h $(SRC_DIR)/$(CLIENTSERVER).h
	$(CC) -c $(SRC_DIR)/$(CLIENTMSGSERVER).c -o $(OBJ_DIR)/$(CLIENTMSGSERVER).o $(PROTO_FLAGS)

#Client-Server Object
$(OBJ_DIR)/$(CLIENTSERVER).o: $(SRC_DIR)/$(CLIENTSERVER).c $(SRC_DIR)/$(CLIENTSERVER).h $(SRC_DIR)/$(PROTO).h
	$(CC) -c $(SRC_DIR)/$(CLIENTSERVER).c -o $(OBJ_DIR)/$(CLIENTSERVER).o

#Client-DB Object
$(OBJ_DIR)/$(CLIENTDB).o: $(SRC_DIR)/$(CLIENTDB).c $(SRC_DIR)/$(CLIENTDB).h
	$(CC) -c $(SRC_DIR)/$(CLIENTDB).c -o $(OBJ_DIR)/$(CLIENTDB).o



#Proto Object
$(OBJ_DIR)/$(PROTO).o: $(SRC_DIR)/$(PROTO).c $(SRC_DIR)/$(PROTO).h
	$(CC) -c $(SRC_DIR)/$(PROTO).c $(PROTO_FLAGS) -o $(OBJ_DIR)/$(PROTO).o

clean:
	$(RM) $(SERVER) $(CLIENT)
